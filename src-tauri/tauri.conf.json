{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Audioplayer",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,"protocol": {
        "all": false,
        "asset": true,
        "assetScope": ["$AUDIO","$AUDIO/*", "$VIDEO/**/**", "$VIDEO"]
      },
      "path": {
        "all": true
      },
      "shell": {
        "all": false,
        "open": true
      },
      "fs": {
        "all": false,
        "readDir": true,
        "readFile": true,
        "scope": ["$AUDIO", "$VIDEO"]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.Corro-Kun.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "windows": {
        "allowDowngrades": true,
        "certificateThumbprint": null,
        "digestAlgorithm": null,
        "nsis": null,
        "timestampUrl": null,
        "tsp": false,
        "webviewFixedRuntimePath": null,
        "webviewInstallMode": {
          "silent": true,
          "type": "downloadBootstrapper"
        },
        "wix": null
      }
    },
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost http://localhost:1420; script-src 'self' 'unsafe-eval' 'unsafe-inline'; font-src 'self' data:; connect-src 'self' ws://localhost:1420 http://localhost:1420; style-src 'self' 'unsafe-inline'; frame-src 'self' data:; worker-src 'self' blob:; manifest-src 'self' data:; child-src 'self' blob:; object-src 'self' blob:; frame-ancestors 'self'; base-uri 'self'; form-action 'self';"
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Audioplayer",
        "width": 1200,
        "height": 700
      }
    ]
  }
}
